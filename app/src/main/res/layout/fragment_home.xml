<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:scrollbars="none"
    android:theme="@style/ScrollView"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Home">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="top"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/eczar_semibold"
            android:gravity="left"
            android:paddingLeft="20dp"
            android:text="Vicarious Texts"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:layout_marginTop="10dp"/>

        <com.google.android.material.card.MaterialCardView
            app:strokeColor="@color/bottomnavhigh"
            app:strokeWidth="2dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/card"
            android:elevation="1dp"
            android:layout_marginHorizontal="15dp"
            app:layout_constraintTop_toBottomOf="@id/text_home">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/progress"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/eczar_semibold"
                android:gravity="left"
                android:paddingLeft="55dp"
                android:text="Story Completion"
                android:textColor="@color/white"
                android:textSize="30sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="45dp"
                android:gravity="end">
                <TextView
                    android:id="@+id/progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/eczar_semibold"
                    android:gravity="end"
                    android:text="10"
                    android:paddingEnd="0dp"
                    android:textColor="@color/white"
                    android:textSize="100sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/eczar_semibold"
                    android:gravity="center"
                    android:text="%"
                    android:textColor="@color/white"
                    android:textSize="60sp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingStart="15dp"
                android:paddingEnd="15dp">
                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="SHARE"
                    android:fontFamily="@font/rubik_bold"
                    android:elevation="0dp"
                    android:shadowColor="@color/transparent"
                    android:shadowRadius="0"
                    android:outlineAmbientShadowColor="@color/transparent"
                    android:outlineSpotShadowColor="@color/transparent"
                    android:textColor="@color/white"
                    app:strokeColor="@color/bottomnavhigh" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="RESUME"
                    android:id="@+id/home_resume"
                    android:fontFamily="@font/rubik_bold"
                    app:rippleColor="@color/bottomnavhigh"
                    android:textColor="@color/white"
                    app:strokeColor="@color/bottomnavhigh"
                    />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/card"
            android:elevation="1dp"
            android:layout_marginHorizontal="15dp"
            app:layout_constraintTop_toBottomOf="@id/text_home">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/loadsave"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/eczar_semibold"
                android:gravity="left"
                android:paddingLeft="55dp"
                android:text="Load / Save Story"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOAD"
                android:fontFamily="@font/rubik_bold"
                app:rippleColor="@color/bottomnavhigh"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="130dp"
                android:textColor="@color/white"
                app:strokeColor="@color/bottomnavhigh" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SAVE"
                android:fontFamily="@font/rubik_bold"
                app:rippleColor="@color/bottomnavhigh"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/white"
                app:strokeColor="@color/bottomnavhigh" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/card"
            android:elevation="1dp"
            android:layout_marginHorizontal="15dp"
            app:layout_constraintTop_toBottomOf="@id/text_home">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/rating"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/eczar_semibold"
                android:gravity="left"
                android:paddingLeft="55dp"
                android:text="Top Rated Story\n"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RATE"
                android:fontFamily="@font/rubik_bold"
                app:rippleColor="@color/bottomnavhigh"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="160dp"
                android:textColor="@color/white"
                app:strokeColor="@color/bottomnavhigh" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DOWNLOAD"
                android:fontFamily="@font/rubik_bold"
                app:rippleColor="@color/bottomnavhigh"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/white"
                app:strokeColor="@color/bottomnavhigh" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/card"
            android:elevation="1dp"
            android:layout_marginHorizontal="15dp"
            app:layout_constraintTop_toBottomOf="@id/text_home">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/create"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/eczar_semibold"
                android:gravity="left"
                android:paddingLeft="55dp"
                android:text="Create a Story"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EDIT"
                android:fontFamily="@font/rubik_bold"
                app:rippleColor="@color/bottomnavhigh"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="130dp"
                android:textColor="@color/white"
                app:strokeColor="@color/bottomnavhigh" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CREATE"
                android:fontFamily="@font/rubik_bold"
                app:rippleColor="@color/bottomnavhigh"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/white"
                app:strokeColor="@color/bottomnavhigh" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@color/card"
            android:elevation="1dp"
            android:layout_marginHorizontal="15dp"
            app:layout_constraintTop_toBottomOf="@id/text_home">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/settings"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/eczar_semibold"
                android:gravity="left"
                android:paddingLeft="55dp"
                android:text="Settings"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="START"
                android:fontFamily="@font/rubik_bold"
                app:rippleColor="@color/bottomnavhigh"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/white"
                app:strokeColor="@color/bottomnavhigh" />
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>